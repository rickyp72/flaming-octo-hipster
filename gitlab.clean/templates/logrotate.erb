# GitLab logrotate settings
# based on: http://stackoverflow.com/a/4883967

<%= @git_home %>/log/*.log {
    weekly
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    copytruncate
}

<%= @git_home %>/gitlab-shell/gitlab-shell.log {
    weekly
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    copytruncate
}